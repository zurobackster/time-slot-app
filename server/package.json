{
  "name": "server",
  "version": "1.0.0",
  "type": "module",
  "description": "Daily Activity Planner API Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:init": "tsx src/db/init.ts",
    "db:migrate": "tsx src/db/init.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:reset": "rm -f database.db && npm run db:init && npm run db:seed",
    "lint": "eslint src --ext .ts",
    "test": "vitest"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.1"
  }
}
